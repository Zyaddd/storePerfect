<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp">

    <!--1st product list-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/card_product_list"
        android:orientation="horizontal"
        android:elevation="5dp"
        tools:ignore="MissingConstraints">

        <!--product image-->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:padding="10dp"
            android:src="@drawable/acer_labtop"
            />
        <!--end of product image-->

        <!--product details-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--product name-->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:text="Name"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
            <!--end of product name-->

            <!--product description-->
            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:text="Description"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
            <!--end of product description-->

            <!--product price-->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium_regular"
                android:text="Price"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!--end of product price-->

            <!--button layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|bottom"
                android:layout_marginBottom="5dp">

                <!--add to card Button-->
                <Button
                    android:id="@+id/add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/button_addtocart"
                    android:drawableLeft="@drawable/ic_add_to_cart"
                    android:fontFamily="@font/titilliumweb_semibold"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="ADD TO CART"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
                <!--end of add to card Button-->

            </LinearLayout>
            <!--end of button layout-->


        </LinearLayout>
        <!--end of product details-->

    </LinearLayout>
    <!--end of 1st product list-->

</RelativeLayout>